<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    
    <bean id="UnitAdminTypeAndPersonGlobalDetail" parent="UnitAdminTypeAndPersonGlobalDetail-parentBean" />
    <bean id="UnitAdminTypeAndPersonGlobalDetail-parentBean" abstract="true" parent="BusinessObjectEntry">
        <property name="businessObjectClass" value="edu.arizona.kra.global.unit.create.UnitAdminTypeAndPersonGlobalDetail" />
        <property name="objectLabel" value="Unit Administrator Change Detail" />
        <property name="attributes">
            <list>
                <ref bean="UnitAdminTypeAndPersonGlobalDetail-documentNumber" />
                <ref bean="UnitAdminTypeAndPersonGlobalDetail-person.userName" />
                <ref bean="UnitAdminTypeAndPersonGlobalDetail-personId" />
                <ref bean="UnitAdminTypeAndPersonGlobalDetail-unitAdministratorTypeCode" />
                <ref bean="UnitAdminTypeAndPersonGlobalDetail-newCollectionRecord" />
            </list>
        </property>
    </bean>


    <!-- Attribute Definitions -->
    
    <bean id="UnitAdminTypeAndPersonGlobalDetail-personId" parent="UnitAdminTypeAndPersonGlobalDetail-personId-parentBean" />
    <bean id="UnitAdminTypeAndPersonGlobalDetail-personId-parentBean" abstract="true" parent="PersonImpl-principalId">
        <property name="name" value="personId" />
        <property name="control">
            <ref bean="HiddenControl" />
        </property>
    </bean>

    <bean id="UnitAdminTypeAndPersonGlobalDetail-person.userName" parent="UnitAdminTypeAndPersonGlobalDetail-person.userName-parentBean" />
    <bean id="UnitAdminTypeAndPersonGlobalDetail-person.userName-parentBean" abstract="true" parent="PersonImpl-principalName">
        <property name="name" value="person.userName" />
        <property name="label" value="KC Person" />
        <property name="shortLabel" value="KC Person User Name" />
        <property name="required" value="false" />
        <property name="validationPattern" >
            <bean parent="AnyCharacterValidationPattern" />
        </property>
        <property name="control" >
            <bean parent="KualiUserControlDefinition"
                p:personNameAttributeName="person.fullName"
                p:universalIdAttributeName="personId"
                p:userIdAttributeName="person.userName" />
        </property>
    </bean>


    <bean id="UnitAdminTypeAndPersonGlobalDetail-unitAdministratorTypeCode" parent="UnitAdminTypeAndPersonGlobalDetail-unitAdministratorTypeCode-parentBean" />
    <bean id="UnitAdminTypeAndPersonGlobalDetail-unitAdministratorTypeCode-parentBean" abstract="true" parent="UnitAdministrator-unitAdministratorTypeCode-parentBean" />

    <!-- This is in the parent GlobalBusinessObjectDetailBase -->
    <bean id="UnitAdminTypeAndPersonGlobalDetail-documentNumber" parent="UnitAdminTypeAndPersonGlobalDetail-documentNumber-parentBean" />
    <bean id="UnitAdminTypeAndPersonGlobalDetail-documentNumber-parentBean" abstract="true" parent="DocumentHeader-documentNumber" />

    <!-- This is in the grandparent PersistableBusinessObjectBase -->
    <bean id="UnitAdminTypeAndPersonGlobalDetail-newCollectionRecord" parent="UnitAdminTypeAndPersonGlobalDetail-newCollectionRecord-parentBean" />
    <bean id="UnitAdminTypeAndPersonGlobalDetail-newCollectionRecord-parentBean" abstract="true" parent="GenericAttributes-newCollectionRecord" />


</beans>